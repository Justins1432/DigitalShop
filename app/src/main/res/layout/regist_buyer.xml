<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emailBuyer"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20sp"
            app:met_floatingLabel="highlight"
            app:met_baseColor="@color/black"
            app:met_primaryColor="@color/black"
            app:met_singleLineEllipsis="true"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passwordBuyer"
            android:hint="Пароль"
            android:inputType="textPassword"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20sp"
            app:met_floatingLabel="highlight"
            app:met_baseColor="@color/black"
            app:met_primaryColor="@color/black"
            app:met_singleLineEllipsis="true"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/surnameBuyer"
            android:hint="Фамилия"
            android:inputType="text"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20sp"
            app:met_floatingLabel="highlight"
            app:met_baseColor="@color/black"
            app:met_primaryColor="@color/black"
            app:met_singleLineEllipsis="true"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameBuyer"
            android:hint="Имя"
            android:inputType="text"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20sp"
            app:met_floatingLabel="highlight"
            app:met_baseColor="@color/black"
            app:met_primaryColor="@color/black"
            app:met_singleLineEllipsis="true"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/patronBuyer"
            android:hint="Отчество"
            android:inputType="text"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20sp"
            app:met_floatingLabel="highlight"
            app:met_baseColor="@color/black"
            app:met_primaryColor="@color/black"
            app:met_singleLineEllipsis="true"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/numberPhoneBuyer"
            android:hint="Номер телефона"
            android:inputType="number"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20sp"
            app:met_floatingLabel="highlight"
            app:met_baseColor="@color/black"
            app:met_primaryColor="@color/black"
            app:met_singleLineEllipsis="true"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/debCardBuyer"
            android:hint="Дебетовая карта"
            android:inputType="number"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20sp"
            app:met_floatingLabel="highlight"
            app:met_baseColor="@color/black"
            app:met_primaryColor="@color/black"
            app:met_singleLineEllipsis="true"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>